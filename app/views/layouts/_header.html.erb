
<header>
    <nav class="navbar navbar-light bg-light rotate" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <%= link_to (image_tag "music-logo-png-2343.png", class: "navbar-brand"), root_path %>
            </div>
                <ul class="nav navbar-nav">
                    <% if user_signed_in? %>
                        <% if current_user.admin? %>
                            <li><%= link_to (t "add_album"), new_album_path%></li>
                            <li><%= link_to (t "show_artists"), singers_path %></li>
                            <li><%= link_to (t "add_artist"), new_singer_path %></li>
                            <li><%= link_to (t "account"), edit_user_registration_path %></li>
                            <li><%= link_to (t "favourite"), favourite_albums_path%></li>
                            <li><%= link_to (t "recommendations"), recommendations_view_path%></li>
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown"><%= t "ranked"%></a>
                                <ul class="dropdown-menu">
                                    <li style="color:#337ab7"><%= link_to (t "top_ranked"), top_ranked_albums_path%></li>
                                    <li style="color:#337ab7"><%= link_to (t "worst_ranked"), worst_ranked_albums_path%></li>
                                </ul>
                            </li>
                        <% else %>
                            <li><%= link_to (t "show_artists"), singers_path %></li>
                            <li><%= link_to (t "account"), edit_user_registration_path %></li>
                            <li><%= link_to (t "favourite"), favourite_albums_path%></li>
                            <li><%= link_to (t "recommendations"), recommendations_view_path%></li>
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown"><%= t "ranked"%><span></span></a>
                                <ul class="dropdown-menu">
                                    <li style="color:#337ab7"><%= link_to (t "top_ranked"), top_ranked_albums_path%></li>
                                    <li style="color:#337ab7"><%= link_to (t "worst_ranked"), worst_ranked_albums_path%></li>
                                </ul>
                            </li>
                        <% end %>
                    <% else %>
                        <li><%= link_to (t "sign_up"), new_user_registration_path, class: "active" %></li>
                        <li><%= link_to (t "log_in"), new_user_session_path, class: "active" %></li>
                    <% end %>
                </ul>
                <%= form_tag search_search_path, method: :get, class: "navbar-form navbar-right", role: "search" do %>
                    <p>
                        <%= text_field_tag :search, params[:search], class: "form-control" %>
                        <%= submit_tag (t "search"), name: nil, class: "btn btn-default" %>
                    </p>
                <% end %>
        </div>
    </nav>
</header>
