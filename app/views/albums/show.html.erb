<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @album.image, style:"width:400px; height:400px" %>
        <h2>Average Rating:</h2>
        <% if @reviews.length == 0 %>
          <p>There's no reviews yet</p>
        <% elsif  @avg_review >= 7.5%>
          <div class="green">
            <h2><%= @avg_review %></h2>
          </div>
        <% elsif  @avg_review < 7.5 and  @avg_review >= 4.5%>
          <div class="yellow">
            <h2><%=  @avg_review %></h2>
          </div>
        <% elsif  @avg_review < 4.5%>
          <div class="red">
            <h2><%=  @avg_review %></h2>
          </div>
        <%end%>
        <em><%= "#{@reviews.length} reviews"%></em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @album.title %></td>
              </tr>
              <tr>
                <td><strong>Artist:</strong></td>
                <td><%= @album.artist %></td>
              </tr>
              <tr>
                <td><strong>Language:</strong></td>
                <td><%= @album.language %></td>
              </tr>
              <tr>
                <td><strong>Released:</strong></td>
                <td><%= @album.released %></td>
              </tr>
              <tr>
                <td><strong>Genre:</strong></td>
                <td><%= @album.genre %></td>
              </tr>
              <tr>
                <td><strong>Album Length:</strong></td>
                <td><%= @album.album_length %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_album_review_path(@album)%>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @album.title%></h1>
        <p><%= @album.artist%></p>
        <% if @reviews.blank?%>
          <h3>No reviews</h3>
          <%= link_to "Write Review", new_album_review_path(@album), class:"btn btn-danger"%>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews", id="lin">
              <% review.rating.to_i.times do  %>
                <span class="glyphicon glyphicon-star-empty"></span>
              <% end %>
              <b><%= review.rating %></b>
              <p><%= review.comment%></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div>
  <%= link_to "Edit this album", edit_album_path(@album) %> |
  <%= link_to "Back to albums", albums_path %>

  <%= button_to "Destroy this album", @album, method: :delete %>
</div>