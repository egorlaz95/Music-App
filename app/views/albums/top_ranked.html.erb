            <div class="right">
                <h1 style="font-size:5vw"><%= link_to (album[0].title), album[0], style: 'color:#000000'%></h1>
                <h1 style="text-align: right"><%= "##{@ar.index(album) + 1}" %></h1>
            </div>
            <h2><%= link_to (album[0].artist), album[0], style: 'color:#000000'%></h2>
            <p style="font-size:2vw" class="glyphicon glyphicon-star-empty"><%= album[1] %></p>
        </div>
    </div>
<%end%>
